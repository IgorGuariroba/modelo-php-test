{
  "name": "igorguariroba/php-composer",
  "description": "exibir os projetos do github",
  "version": "1.0.0",
  "type": "library",
  "license": "mit",
  "autoload": {
    "psr-4": {
      "Igorguariroba\\PhpComposer\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Igor Guariroba"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "phpunit/phpunit": "^11",
    "phan/phan": "^5.4",
    "squizlabs/php_codesniffer": "^3.10",
    "spatie/phpunit-watcher": "^1.24"
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs --standard=PSR12 src/",
    "phan": "phan --allow-polyfill-parser",
    "test:watch": "phpunit-watcher watch",
    "check": [
      "@phan",
      "@cs",
      "@test"
    ],
    "post-update-cmd": [
      "@test"
    ]
  },
  "scripts-descriptions": {
    "check": "Roda as verificações do codigo phan,phpcs e phpunit"
  }
}
